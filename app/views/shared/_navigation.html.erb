<div class="navbar navbar-fixed-top navbar-default">
    <div class="navbar-inner">


      <ul class="nav navbar-nav">
        <li class="<%= 'active' if controller_name == 'stores' %>">
          <%= link_to 'Lojas', store_path %>
        </li>
      </ul>

      <% if current_user %>
        <span class="navbar-text pull-right">Olá <%= current_user.email %>,
        <%= link_to "Sair", destroy_user_session_path, method: :delete, class: 'log-off' %> </span>
      <% else %>
        <span class="navbar-text pull-right">Não está logado, <%= link_to "Entrar", new_user_session_path, class: 'log-in' %> </span>
      <% end %>

    </div>
</div>
